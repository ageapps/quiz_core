<fieldset class="form-group">
    <label for="question">Question</label>
    <input type="text" class="form-control" name="quiz[question]" placeholder="Enter your Question" value="<%= quiz.question %>">
    <small class="text-muted">Try to write a question that wasnÂ´t made before</small>
</fieldset>
<fieldset class="form-group">
    <label for="answer">Answer</label>
    <input type="text" class="form-control" name="quiz[answer]" placeholder="Your Answer" value="<%= quiz.answer %>">
</fieldset>
<fieldset class="form-group">
    <select class="selectpicker" data-live-search="true" data-style="btn-primary" name="quiz[category]" form="quiz_form" multiple>
        <% for (var i in quiz.QuizCategories){ %>
            <option selected="true" value="<%= quiz.QuizCategories[i].id%>">
                <%= quiz.QuizCategories[i].text%>
            </option>
            <% } %>
                <option data-divider="true"></option>
                <% for (var i in categories){ %>
                    <option value="<%= categories[i].id%>">
                        <%= categories[i].text%>
                    </option>
                    <% } %>
    </select>
</fieldset>
<fieldset class="form-group">
    <label for="img">Image</label>
    <input type="file" class="form-control" id="img" name="image" accept="image/*" %>">
</fieldset>
<button type="submit" class="btn btn-primary">Submit</button>
<button type="reset" class="btn btn-primary">Reset</button>
<a href="/quizzes">
    <button type="button" class="btn btn-default">Cancel</button>
</a>
