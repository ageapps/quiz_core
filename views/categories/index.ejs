<div class="container">
    <h1><%= indexTitle %></h1>
</div>

<div class="container background-light">
    <br>
    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <div class="row">
                <div class="col col-xs-4">
                    <form role="form" method="get" action="/category/search" id="custom-search-input">
                        <div class="input-group col-md-12">
                            <input type="text" class="form-control input-lg" placeholder="Search" name="search" id="search" value="<%= search %>"/>
                            <span class="input-group-btn">
                                <button class="btn btn-primary btn-lg" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <% if  (categories.length > 0){ %>
                <table class="table table-hover table-bordered table-list">
                    <thead class="thead-default">
                        <tr>
                            <th class="text-center">
                                <i class="glyphicon glyphicon-asterisk"></i>
                            </th>
                            <th class="text-center">Category</th>
                            <th class="text-center">Quizzes</th>
                            <th class="text-center">Description</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <% for (var i in categories){ %>
                            <tr>
                                <td>
                                    <a href="/category/<%=categories[i].id %>" class="<%=categories[i].icon %>"></a>
                                </td>
                                <td>
                                    <span>
                                        <a href="/category/<%=categories[i].id %>">
                                            <%= categories[i].text %>
                                        </a>
                                    </span>
                                </td>
                                <td>
                                    <%= categories[i].QuizesInCategories.length %>

                                </td>
                                <td>
                                    <%= categories[i].description %>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } else{ %>
                <h3>No Categories were found</h3>
            <% } %>
        </div>
    </div>
</div>
